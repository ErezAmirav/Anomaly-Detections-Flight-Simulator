<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.files.MyFilesController">

    <MenuBar prefHeight="30.0" prefWidth="1000" BorderPane.alignment="CENTER">
        <menus>
            <Menu mnemonicParsing="false" text="Open Files">
                <items>
                    <MenuItem fx:id="train" mnemonicParsing="false" onAction="#openTrainFile" text="Choose a Train CSV File" />
                    <MenuItem fx:id="test" mnemonicParsing="false" onAction="#openTestFile" text="Choose a Test CSV File" />
                    <MenuItem fx:id="algo" mnemonicParsing="false" onAction="#openAlgFile" text="Choose an Algorithm File" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

</AnchorPane>
